<div class="container mt-2">
    <h1 class="display-4 text-center">All area</h1>
        <% @posts.each do |post| %>
            <div class="card mb-3">
                <h5 class="card-header"><%= post.title %></h5>
                
                <div class="card-body">
                    <div class="card-text row row-cols-2">
                        <p class="col col-10 col-sm-3 col-md-2"><%= post.open_date.to_time.strftime("%l:%M %p") %><br />~ <%= post.close_date.to_time.strftime("%l:%M %p")%></p>
                        <div class="col col-10 col-sm-7 col-md-7">
                            <h5><%= post.address %> <%= link_to '>> Get direction', post.direction_url, class: "ml-2", target: "_blank", id: "get-dir" %> </h5>
                            <p><%= post.open_date.to_time.strftime("%e %B %Y") %> ~ <%= post.close_date.to_time.strftime("%e %B %Y") %></p>
                            <div class="mt-n1 mb-1 font-weight-light" style="font-size: 0.9em"><%= post.body %></div>
                            <p style="font-size: 1.1em"><strong><%= current_user.email %></strong>
                                <% if post.phone != nil && post.phone != "" %>
                                    <i class="fas fa-phone ml-4 mr-1"></i><%= post.phone %>
                                <% end %>
                            </p>
                            <div class="row">
                                <a href="#" class="btn btn-info mt-2 mr-auto col-auto">See comments</a>
                                <td></td>
                                <%= link_to 'Edit', edit_post_path(post), class:"col-auto" %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"col-auto text-danger" %>
                            </div>
                        </div>
                        <%= image_tag("coder_academy.png", class: "col col-10 col-sm-10 col-md-3", alt: "image of sale", style: "object-fit: contain;") %>
                    </div>
                </div>
            </div>
        <% end %>
</div>


